# Inventory Management System Environment Variables
# Copy this file to .env and fill in your values

# Database Configuration
DB_HOST=localhost
DB_PORT=3306
DB_USER=root
DB_PASSWORD=your_password_here
DB_NAME=ims_db

# Security Settings
LOCK_THRESHOLD=5                    # Failed login attempts before account lock
LOCK_MINUTES=15                     # Minutes to lock account after threshold
PASSWORD_MIN_LENGTH=6               # Minimum password length

# Application Settings
APP_NAME=Inventory Management System
DEBUG=False                         # Set to True for development

# Logging Settings
LOG_LEVEL=INFO                      # DEBUG, INFO, WARNING, ERROR, CRITICAL
LOG_FILE=logs/ims.log              # Optional: leave blank for console only
